{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2021",
    "lib": ["ESNext"],
    "module": "esnext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "declarationMap": true,
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__",
    "**/__mocks__"
  ]
}

// from https://github.com/aleph-im/aleph-indexer-library
